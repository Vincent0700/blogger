
pre.prettyprint
  padding-left: 8px !important

pre
  word-break: break-all
  word-wrap: break-word

html
  transition: all 0.3s ease-out
  cursor: url(../images/cursor/default.cur), default

a:hover
  cursor: url(../images/cursor/pointer.cur), pointer

body
  margin: 0 auto !important
  background: url(../images/bg.png)

p, ol
  margin-top: 10px
  margin-bottom: 10px

blockquote
  margin-left: 0 !important
  margin-right: 0 !important
  margin-top: 0 !important
  padding: 0 !important

  &:before
    content: '' !important
    margin-left: 0 !important

  & > p:before
    margin-right: 0.25em;
    color: #ccffb6;
    content: "\201C";
    vertical-align: -0.4em;
    font-size: 2em;
    line-height: 0.1em;


.content a[data-fancybox]
  transition: all 0.3s ease-out
  border: 4px solid transparent
  border-radius: 3px
  margin: 10px 0
  background-image: none
  background: #333333 9 c
  display: block

.content a[data-fancybox]:hover
  border: 4px solid #dda80f
  background: #000000 ff

.fancybox-bg
  opacity: 0.7 !important

.tagcloud a
  background: #1c8060
  border-radius: 3px
  color: #ffffff !important
  padding: 2px 5px
  text-decoration: none !important
  background-image: none !important
  transition: all 0.3s ease-out
  border: 1px solid #000

  &:hover
    background #ffffff
    color: #191919 !important

#logo
  transition: all 0.3s ease-out

#friendly_links
  padding: 0

  & > li
    list-style: none
    margin-bottom: 5px

    & > a
      background-image: none
      background: #2f2f2f
      display: block
      position: relative
      overflow: hidden
      padding: 2px 10px
      border-radius: 2px
      -webkit-transition: all 0.3s ease-out
      -moz-transition: all 0.3s ease-out
      -ms-transition: all 0.3s ease-out
      -o-transition: all 0.3s ease-out
      transition: all 0.3s ease-out
      border-left: 8px solid #fff

      &:hover
        border-color: #dda80f
        background: #000

      & > .link_content
        height: 46px
        position: relative
        float: left
        padding: 8px 10px

        & > span
          padding: 0
          margin: 0
          display block

          &.title
            font-size 16px
            height: 20px
            line-height: 16px
            color: #eee
            transition: all 0.3s ease-out

          &.desc
            height: 12px
            line-height: 12px
            font-size: 12px
            color: #ffd34f
            transition: all 0.3s ease-out

#nav ul.responsive
  margin-top: 10px !important
  background: #333 !important
  padding: 10px 0 !important
  border-radius: 3px !important

  li
    padding-top: 0 !important
    line-height: 40px !important
    padding-left: 0 !important
    text-align: center !important
    margin-right: 0 !important
    text-transform: uppercase

    &:nth-child(even)
      background: #444

#nav ul li.icon
  margin-right: 0 !important
