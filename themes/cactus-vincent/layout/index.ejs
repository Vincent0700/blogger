<div style="margin-bottom: 20px">Day job for food. Night job for fun.</div>

<section id="about">
    <% if (config.description) { %>
        <%- markdown(config.description) %>
    <% } %>
    <% if (theme.social_links) { %>
        <div class="social_links">
            <% var nb_links = Object.keys(theme.social_links).length %>
            <% var i = 0 %>
            <% for(var link in theme.social_links) { %>
                <% if (link == 'mail') { %>
                    <a class="icon" target="_blank" href="<%- url_for(theme.social_links[link]) %>">
                        <i class="fas fa-envelope"></i>
                    </a>
                <% } else if (link == 'github') { %>
                    <a class="icon" target="_blank" href="<%- url_for(theme.social_links[link]) %>">
                        <i class="fab fa-github"></i>
                    </a>
                <% } else if (link == 'rss') { %>
                    <a class="icon" target="_blank" href="<%- url_for(theme.social_links[link]) %>">
                        <i class="fas fa-rss"></i>
                    </a>
                <% } %>
            <% } %>
        </div>
    <% } %>
</section>

<img class="no-box"
     src="/2019/02/06/011%20OLED%20SH1106%20Tutorial/small.png"
     style="border: 4px solid #fff; border-radius: 4px; margin-top: 20px; width: 100%">

<section id="writing">
    <span class="h1"><a href="<%- url_for("archives") %>">▨ <%= __('index.articles') %> </a></span>
    <span class="h2">Categories</span>
    <% var categories = [];
    site.categories.forEach(function (item) {
        categories.push({name: item.name, length: item.length});
    });
    categories.sort((a, b) => b.length - a.length);
    categories.forEach(function (item) { %>
        <a href="/categories/<%= item.name %>" style="background: none !important">
            <img class="bandage"
                 src="https://img.shields.io/badge/<%= item.name %>-<%= item.length %>-orange.svg">
        </a>
    <% }) %>
    <% if (theme.tags_overview && site.tags.length) { %>
        <span class="h2"><%= __('index.topics') %></span>
        <% var tags = [];
            site.tags.forEach(function (item) {
                tags.push({name: item.name, length: item.length});
            });
            tags.sort((a, b) => b.length - a.length);
        tags.forEach(function (item) { %>
            <a href="/tags/<%= item.name %>" style="background: none !important">
                <img class="bandage"
                     src="https://img.shields.io/badge/<%= item.name %>-blue.svg">
            </a>
        <% }) %>
        <!--<span class="widget tagcloud">-->
        <!--<%- tagcloud(theme.tags_overview) %>-->
        </span>
        <span class="h2"><%= __('index.most_recent') %></span>
    <% } %>
    <ul class="post-list">
        <% if (theme.posts_overview.show_all_posts) { %>
            <% var show_posts = page.posts.sort('date', 'desc') %>
        <% } else { %>
            <% var show_posts = site.posts.sort('date', 'desc').limit(theme.posts_overview.post_count || 5) %>
        <% } %>
        <% show_posts.each(function(post, i){ %>
            <li class="post-item">
                <%- partial('_partial/post/date', {post: post, class_name: 'meta'}) %>
                <span><%- partial('_partial/post/title', {post: post, index: true, class_name: ''}) %></span>
            </li>
        <% }); %>
    </ul>
    <% if (theme.posts_overview.show_all_posts) { %>
        <%- partial('_partial/pagination') %>
    <% } %>
</section>

<% if (site.data.projects) { %>
    <section id="projects">
        <span class="h1"><a href="<%- url_for(theme.projects_url) %>"><%= __('index.projects') %></a></span>
        <ul class="project-list">
            <% for(var obj in site.data.projects){ %>
                <li class="project-item">
                    <a href="<%= site.data.projects[obj].url %>"><%= site.data.projects[obj].name %></a>: <%- markdown(site.data.projects[obj].desc) %>
                </li>
            <% } %>
        </ul>
    </section>
<% } %>

<span class="h1" style="margin-top:40px;margin-bottom:40px"><a>▨ Status</a></span>

<section>
    <img class="bandage" src="https://img.shields.io/badge/author-vincent-yellow.svg">
    <img class="bandage"
         src="https://img.shields.io/badge/age-<%= Math.floor((Date.now() - new Date("1994-10-31")) / (86400000 * 365)) %>-yellow.svg">
    <img class="bandage" src="https://img.shields.io/badge/email-vincent.wyq@gmail.com-yellow.svg">
</section>

<section style="margin-bottom: 60px">
    <img class="bandage"
         src="https://img.shields.io/badge/running days-<%= Math.floor((Date.now() - new Date("2018-11-20")) / 86400000) %>-green.svg">
    <img class="bandage" src="https://img.shields.io/badge/posts count-<%= site.posts.length %>-green.svg">
    <img class="bandage" src="https://img.shields.io/badge/categories count-<%= site.categories.length %>-green.svg">
    <img class="bandage" src="https://img.shields.io/badge/tags count-<%= site.tags.length %>-green.svg">
